<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PhotoWeatherApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="MarginDefault">
        <item name="android:layout_marginTop">@dimen/large_margin</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
    </style>

    <style name="HeaderTextStyle" parent="MarginDefault">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/very_large_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubHeaderTextStyle" parent="MarginDefault">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ParagraphTextStyle" parent="MarginDefault">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="EditTextStyle" parent="MarginDefault">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/dim_grey</item>
        <item name="android:textColorHint">@color/dim_grey</item>
        <item name="backgroundTint">@color/dim_grey</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RoundedMoviePoster">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">3%</item>
    </style>
</resources>